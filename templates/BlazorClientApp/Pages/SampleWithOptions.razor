<div class="igContainer">
    <div class="igOptions">
        <button @onclick="OnButtonClick">Click me</button>
        <button @onclick="OnButtonClick">Click me</button>
    </div>

    <div class="igComponent">

        @* TODO add IG control here *@
        <p>Current count: @CurrentCount</p>
    </div>
</div>

