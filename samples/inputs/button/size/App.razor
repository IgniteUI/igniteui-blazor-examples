@using IgniteUI.Blazor.Controls


<style>
    .buttonContainer {
        display: flex;
        justify-content: space-evenly;
        margin-top: 20px;
    }

    #radioGroup {
        display: flex;
        margin: 0 auto;
        width: 15%;
    }
</style>

<div class="container vertical">
    <IgbRadioGroup id="radioGroup" Alignment="RadioGroupAlignment.Horizontal" >
        <IgbRadio name="size" Value="small" LabelPosition="RadioLabelPosition.After" @onclick="OnSmallClick">Small</IgbRadio>
        <IgbRadio name="size" Value="medium" LabelPosition="RadioLabelPosition.After" @onclick="OnMediumClick">Medium</IgbRadio>
        <IgbRadio name="size" Value="large" LabelPosition="RadioLabelPosition.After" Checked="true" @onclick="OnLargeClick">Large</IgbRadio>
    </IgbRadioGroup>

    <div class="buttonContainer">
        <IgbButton Size="@SizableComponentSize" Variant="ButtonVariant.Flat">Flat</IgbButton>
        <IgbButton Size="@SizableComponentSize" Variant="ButtonVariant.Contained">Contained</IgbButton>
        <IgbButton Size="@SizableComponentSize" Variant="ButtonVariant.Outlined">Outlined</IgbButton>
        <IgbButton Size="@SizableComponentSize" Variant="ButtonVariant.Fab">Like</IgbButton>
    </div>
</div>

@code {

    private SizableComponentSize SizableComponentSize = SizableComponentSize.Large;

    public void OnSmallClick(EventArgs e)
    {
        SizableComponentSize = SizableComponentSize.Small;
    }

    public void OnMediumClick(EventArgs e)
    {
        SizableComponentSize = SizableComponentSize.Medium;
    }

    public void OnLargeClick(EventArgs e)
    {
        SizableComponentSize = SizableComponentSize.Large;
    }
}