@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">
    <div class="options horizontal" >
        <label>X-Axis Overlap:</label>
        <label class="options-value" >@XAxisOverlapValue</label>
        <input type="range" min="0" max="1" step="0.1" value="1" @oninput="OnXAxisOverlapChange"/>
    </div>
    <div class="options vertical">
        <span class="legend-title">Highest Grossing Film Franchises and Series Worldwide as of April 2020</span>
        <div class="legend">
            <Legend @ref="Legend" Orientation="LegendOrientation.Horizontal" />
        </div>
    </div>
    <div class="container vertical">
        @if (Data != null)
        {
            <CategoryChart Height="100%" Width="100%"
                           Legend="Legend"
                           DataSource="Data"
                           ChartType="CategoryChartType.Column"
						   IsHorizontalZoomEnabled="false"
                           IsVerticalZoomEnabled="false"
                           XAxisInterval="1"
                           XAxisOverlap="@XAxisOverlapValue">
            </CategoryChart>
        }
    </div>
</div>

@code {

    private Legend _Legend;
    private Legend Legend
    {
        get { return _Legend; }
        set { _Legend = value; StateHasChanged(); }
    }

    private double XAxisOverlapValue = 1;

    private List<FilmFranchiseRevenueInfo> Data = new FilmFranchiseRevenueData();

    protected override void OnInitialized()
    {
        CategoryChartModule.Register(IgniteUIBlazor);
        LegendModule.Register(IgniteUIBlazor);
    }

    private void OnXAxisOverlapChange(ChangeEventArgs args)
    {
        this.XAxisOverlapValue = double.Parse(args.Value.ToString());
    }
}
