@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">

    <div class="container vertical">

        @if (Data != null)
        {
            <section>Revenue Sparkline</section>
            <IgbSparkline Height="100%"
                       Width="100%"
                       DataSource="Data"
                       DisplayType="SparklineDisplayType.WinLoss "
                       ValueMemberPath="Value"
                       LabelMemberPath="Angle"
                       Minimum="-1" Maximum="1">
            </IgbSparkline>

            <section>Income Sparkline</section>
            <IgbSparkline Height="100%"
                       Width="100%"
                       DataSource="Data"
                       DisplayType="SparklineDisplayType.WinLoss "
                       ValueMemberPath="Income"
                       LabelMemberPath="Angle"
                       Minimum="-1" Maximum="1">
            </IgbSparkline>

            <section>Expanse Sparkline</section>
            <IgbSparkline Height="100%"
                       Width="100%"
                       DataSource="Data"
                       DisplayType="SparklineDisplayType.WinLoss "
                       ValueMemberPath="Expanse"
                       LabelMemberPath="Angle"
                       Minimum="-1" Maximum="1">
            </IgbSparkline>

        }

    </div>
</div>

@code {

    private List<SparklineItem> Data;

    protected override void OnInitialized()
    {
        IgbSparklineModule.Register(IgniteUIBlazor);

        Data = SparklineData.Generate ();
    }

}