
@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="igContainer-vertical">
    <div class="igOptions-vertical">
        <span class="igLegend-title">Global Electricity Demand by Energy Use</span>
        <div class="igLegend">
            <ItemLegend @ref="Legend" Orientation="LegendOrientation.Horizontal" />
        </div>
    </div>

    <div class="igComponent">
        @if (DataSource != null)
        {
            <PieChart Height="100%" Width="100%"
                      @ref="Chart"
                      DataSource="DataSource"
                      LabelMemberPath="Summary"
                      ValueMemberPath="MarketShare"
                      LegendLabelMemberPath="Summary"
                      Outlines="white"
                      LabelsPosition="LabelsPosition.OutsideEnd"
                      RadiusFactor="0.7"
                      LabelExtent="30">
            </PieChart>
        }
    </div>
</div>

@code {

    public PieChart Chart;
    public ItemLegend Legend;
    public List<DataItem> DataSource;

    protected override void OnInitialized()
    {
        PieChartModule.Register(IgniteUIBlazor);
        ItemLegendModule.Register(IgniteUIBlazor);

        var dataItems = new List<DataItem>();
        dataItems.Add(new DataItem() { MarketShare = 25, Company = "Residential Appliance", });
        dataItems.Add(new DataItem() { MarketShare = 20, Company = "Heating", });
        dataItems.Add(new DataItem() { MarketShare = 18, Company = "Lighting", });
        dataItems.Add(new DataItem() { MarketShare = 37, Company = "Space Cooling", });

        DataSource = dataItems;

    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);

        Chart.Legend = Legend;

    }

    public class DataItem
    {
        public string Company { get; set; }
        public double MarketShare { get; set; }
        public string Summary { get { return Company + " " + MarketShare + "%"; } }
    }
}