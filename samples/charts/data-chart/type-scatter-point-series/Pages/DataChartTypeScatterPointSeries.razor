@using Infragistics.Blazor.Controls
@inject IInfragisticsBlazor InfragisticsBlazor

<div class="igContainer">
    <div class="igComponent">

        <DataChart Height="100%" Width="100%"
                   Subtitle="Countries GDP vs. Population"
                   SubtitleTopMargin="10"
                   IsHorizontalZoomEnabled="true"
                   IsVerticalZoomEnabled="true">

            <NumericXAxis Name="xAxis" IsLogarithmic="true"
                          AbbreviateLargeNumbers="true"
                          TitleBottomMargin="10"
                          Title="Population">
            </NumericXAxis>
            <NumericYAxis Name="yAxis" IsLogarithmic="true"
                          AbbreviateLargeNumbers="true"
                          TitleLeftMargin="10"
                          Title="GDP per Capita">
            </NumericYAxis>

            <ScatterSeries XAxisName="xAxis"
                           YAxisName="yAxis"
                           Title="High Income Countrie"
                           DataSource="@CountriesWithHighIncome"
                           XMemberPath="Population"
                           YMemberPath="GdpTotal"
                           ShowDefaultTooltip="true"
                           MarkerType=@MarkerType.Circle>
            </ScatterSeries>

            <ScatterSeries XAxisName="xAxis"
                           YAxisName="yAxis"
                           Title="Low Income Countrie"
                           DataSource="@CountriesWithLowIncome"
                           XMemberPath="Population"
                           YMemberPath="GdpTotal"
                           ShowDefaultTooltip="true"
                           MarkerType=@MarkerType.Circle>
            </ScatterSeries>

        </DataChart>

    </div>
</div>

@code {

    private List<Country> CountriesWithHighIncome;
    private List<Country> CountriesWithLowIncome;

    protected override void OnInitialized()
    {
        LegendModule.Register(InfragisticsBlazor);
        DataChartCoreModule.Register(InfragisticsBlazor);
        DataChartScatterModule.Register(InfragisticsBlazor);
        DataChartScatterCoreModule.Register(InfragisticsBlazor);
        DataChartInteractivityModule.Register(InfragisticsBlazor);
        NumberAbbreviatorModule.Register(InfragisticsBlazor);

        CountriesWithHighIncome = SampleScatterStats.GetCountriesWithHighIncome();
        CountriesWithLowIncome = SampleScatterStats.GetCountriesWithLowIncome();

        //Console.WriteLine("DataSource " + DataSource.Count);
    }
}