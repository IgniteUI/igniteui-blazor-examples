@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="igContainer">
    <div class="igOptions">
        <span class="igLegend-title">Highest grossing film franchises and series worldwide as of April 2020</span>
        <div class="igLegend">
            <Legend @ref="LegendRef" Orientation="LegendOrientation.Horizontal" />
        </div>
    </div>

    <div class="igComponent">
        @if (DataSource != null)
        {
        <DataChart Height="100%" Width="100%"
                   Legend="LegendRef">
            <NumericXAxis Name="xAxis" Title="Billions of U.S. dollars" />
            <CategoryYAxis Name="yAxis" Label="Film" DataSource="DataSource" IsInverted="true"/>

            <BarSeries XAxisName="xAxis" YAxisName="yAxis" DataSource="DataSource" ValueMemberPath="WorldBoxOffice" Title="Total World Box Office Revenue"/>
            <BarSeries XAxisName="xAxis" YAxisName="yAxis" DataSource="DataSource" ValueMemberPath="HighestGrossingMovie" Title="Highest Grossing Movie in Series"/>
        </DataChart>
        }
    </div>
</div>

@code {

    private List<FilmData> DataSource;

    private Legend legend;
    private Legend LegendRef
    {
        get { return legend; }
        set
        {
            legend = value;
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        DataChartCoreModule.Register(IgniteUIBlazor);
        DataChartCategoryCoreModule.Register(IgniteUIBlazor);
        DataChartCategoryModule.Register(IgniteUIBlazor);
        DataChartInteractivityModule.Register(IgniteUIBlazor);
        DataChartVerticalCategoryModule.Register(IgniteUIBlazor);
        LegendModule.Register(IgniteUIBlazor);

        InitData();
    }

    private void InitData()
    {
        List<FilmData> _data = new List<FilmData>();
        _data.Add(new FilmData() { Film = "Marvel Universe All Films", WorldBoxOffice = 22.55, HighestGrossingMovie = 2.8 });
        _data.Add(new FilmData() { Film = "Star Wars",                 WorldBoxOffice = 10.32, HighestGrossingMovie = 2.07 });
        _data.Add(new FilmData() { Film = "Harry Potter",              WorldBoxOffice = 9.19,  HighestGrossingMovie = 1.34 });
        _data.Add(new FilmData() { Film = "Avengers",                  WorldBoxOffice = 7.76,  HighestGrossingMovie = 2.8 });
        _data.Add(new FilmData() { Film = "Spider Man",                WorldBoxOffice = 7.22,  HighestGrossingMovie = 1.28 });
        _data.Add(new FilmData() { Film = "James Bond",                WorldBoxOffice = 7.12,  HighestGrossingMovie = 1.11 });

        this.DataSource = _data;
    }

    public class FilmData
    {
        public string Film { get; set; }
        public double WorldBoxOffice { get; set; }
        public double HighestGrossingMovie { get; set; }
    }
}