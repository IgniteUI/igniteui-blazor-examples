@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">
    <div class="container vertical">

        <IgbDataChart Height="100%" Width="100%"
                   Subtitle="Wind Speed vs Boat Speed"
                   SubtitleTopMargin="10"
                   IsHorizontalZoomEnabled="false"
                   IsVerticalZoomEnabled="false">
            <NumericAngleAxis Name="angleAxis" StartAngleOffset="-90"
                              Interval="30"
                              MinimumValue="0"
                              MaximumValue="360" />
            <NumericRadiusAxis Name="radiusAxis"
                               RadiusExtentScale="0.9"
                               InnerRadiusExtentScale="0.1"
                               Interval="25"
                               MinimumValue="0"
                               MaximumValue="100" />

            <PolarSplineSeries Name="series1"
                             DataSource="Data"
                             AngleAxisName="angleAxis"
                             AngleMemberPath="Direction"
                             RadiusMemberPath="WindSpeed"
                             RadiusAxisName="radiusAxis"
                             ShowDefaultTooltip="true"
                             Thickness="1"
                             Title="Wind Speed"
                             MarkerType="MarkerType.Circle" />
            <PolarSplineSeries Name="series2"
                             DataSource="Data"
                             AngleAxisName="angleAxis"
                             AngleMemberPath="Direction"
                             RadiusMemberPath="BoatSpeed"
                             RadiusAxisName="radiusAxis"
                             ShowDefaultTooltip="true"
                             Thickness="1"
                             Title="Boat Speed"
                             MarkerType="MarkerType.Circle"/>
        </IgbDataChart>

    </div>
</div>

@code {

    private List<SamplePolarItem> Data;

    protected override void OnInitialized()
    {
        IgbDataChartCoreModule.Register(IgniteUIBlazor);
        IgbDataChartPolarModule.Register(IgniteUIBlazor);
        IgbDataChartPolarCoreModule.Register(IgniteUIBlazor);
        IgbDataChartInteractivityModule.Register(IgniteUIBlazor);

        Data = SamplePolarData.Create();
    }

}