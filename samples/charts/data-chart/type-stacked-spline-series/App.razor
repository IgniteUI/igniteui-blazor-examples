@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">
    <div class="container vertical">

        <IgbDataChart Height="100%" Width="100%"
                   ChartTitle="Energy Production by Source"
                   TitleTopMargin="10"
                   IsHorizontalZoomEnabled="false"
                   IsVerticalZoomEnabled="false">

            <IgbCategoryXAxis Name="xAxis" Label="Country" DataSource="Data" />
            <IgbNumericYAxis Name="yAxis" Title="Energy (in Billions Wh)" TitleLeftMargin="10" MinimumValue="0"/>

            <IgbStackedSplineSeries XAxisName="xAxis"
                          YAxisName="yAxis"
                          DataSource="Data"
                          AreaFillOpacity="1"
                          ShowDefaultTooltip="true" >
                <IgbStackedFragmentSeries Name="coal" ValueMemberPath="Coal"  />
                <IgbStackedFragmentSeries Name="hydro" ValueMemberPath="Hydro"  />
                <IgbStackedFragmentSeries Name="nuclear" ValueMemberPath="Nuclear"  />
                <IgbStackedFragmentSeries Name="solar" ValueMemberPath="Solar" />
                <IgbStackedFragmentSeries Name="oil" ValueMemberPath="Oil"  />
            </IgbStackedSplineSeries>
        </IgbDataChart>

    </div>
</div>

@code {

    private List<SampleStackedItem> Data;

    protected override void OnInitialized()
    {
        // TODO fix rendering of StackedSplineSeries
        IgbDataChartCoreModule.Register(IgniteUIBlazor);
        IgbDataChartCategoryCoreModule.Register(IgniteUIBlazor);
        IgbDataChartCategoryModule.Register(IgniteUIBlazor);
        IgbDataChartInteractivityModule.Register(IgniteUIBlazor);
        IgbDataChartStackedModule.Register(IgniteUIBlazor);
        IgbColumnFragmentModule.Register(IgniteUIBlazor);
        IgbStackedSplineSeriesModule.Register(IgniteUIBlazor);
        IgbStackedFragmentSeriesModule.Register(IgniteUIBlazor);

        Data = SampleStackedData.Create();


    }
}