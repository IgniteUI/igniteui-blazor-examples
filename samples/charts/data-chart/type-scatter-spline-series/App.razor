@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">
    <div class="container vertical">

        <IgbDataChart Height="100%" Width="100%"
                   Subtitle="Countries GDP vs. Population"
                   SubtitleTopMargin="10"
                   IsHorizontalZoomEnabled="true"
                   IsVerticalZoomEnabled="true">

            <IgbNumericXAxis Name="xAxis" IsLogarithmic="true"
                          AbbreviateLargeNumbers="true"
                          TitleBottomMargin="10"
                          Title="Population">
            </NumericXAxis>
            <IgbNumericYAxis Name="yAxis" IsLogarithmic="true"
                          AbbreviateLargeNumbers="true"
                          TitleLeftMargin="10"
                          Title="GDP per Capita">
            </NumericYAxis>

            <ScatterSplineSeries XAxisName="xAxis"
                                 YAxisName="yAxis"
                                 Title="High Income Countrie"
                                 DataSource="CountriesWithHighIncome"
                                 XMemberPath="Population"
                                 YMemberPath="GdpTotal"
                                 ShowDefaultTooltip="true"
                                 MarkerType=MarkerType.Circle>
            </ScatterSplineSeries>

            <ScatterSplineSeries XAxisName="xAxis"
                                 YAxisName="yAxis"
                                 Title="Low Income Countrie"
                                 DataSource="CountriesWithLowIncome"
                                 XMemberPath="Population"
                                 YMemberPath="GdpTotal"
                                 ShowDefaultTooltip="true"
                                 MarkerType=MarkerType.Circle>
            </ScatterSplineSeries>

        </IgbDataChart>

    </div>
</div>

@code {

    private List<Country> CountriesWithHighIncome;
    private List<Country> CountriesWithLowIncome;

    protected override void OnInitialized()
    {
        IgbLegendModule.Register(IgniteUIBlazor);
        IgbDataChartCoreModule.Register(IgniteUIBlazor);
        IgbDataChartScatterModule.Register(IgniteUIBlazor);
        IgbDataChartScatterCoreModule.Register(IgniteUIBlazor);
        IgbDataChartInteractivityModule.Register(IgniteUIBlazor);
        IgbNumberAbbreviatorModule.Register(IgniteUIBlazor);

        CountriesWithHighIncome = SampleScatterStats.GetCountriesWithHighIncome();
        CountriesWithLowIncome = SampleScatterStats.GetCountriesWithLowIncome();


    }
}