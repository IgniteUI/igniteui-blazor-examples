@* this is required for Infragistics controls *@
@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="igContainer">
    <div class="igComponent">
        <RadialGauge Height="100%" Width="100%"
                     TransitionDuration="500"
                     MinimumValue="0"
                     MaximumValue="80"
                     Value="10"
                     Interval="10"
                     LabelExtent="0.6"
                     LabelInterval="10"
                     Font="15px Verdana,Arial"
                     ScaleStartAngle="135"
                     ScaleEndAngle="45"
                     ScaleBrush="#0B8FED"
                     ScaleOversweepShape="RadialGaugeScaleOversweepShape.Auto"
                     ScaleSweepDirection="SweepDirection.Clockwise"
                     ScaleEndExtent="0.825"
                     ScaleStartExtent="0.775"
                     BackingShape="RadialGaugeBackingShape.Fitted"
                     BackingBrush="#FCFCFC"
                     BackingOutline="D6D6D6"
                     BackingOversweep="5"
                     BackingCornerRadius="10"
                     BackingOuterExtent="0.9"
                     BackingStrokeThickness="4"
                     NeedleShape="RadialGaugeNeedleShape.Needle"
                     NeedlePivotShape="RadialGaugePivotShape.CircleOverlay"
                     NeedleEndExtent="0.5"
                     NeedlePointFeatureExtent="0.2"
                     NeedlePivotWidthRatio="0.1"
                     NeedleBrush="#9F9FA0"
                     NeedleOutline="#9F9FA0"
                     NeedlePivotBrush="9F9FA0"
                     NeedlePivotOutline="9F9FA0"
                     TickBrush="rgba(51, 51, 51, 1)"
                     TickStartExtent="0.675"
                     TickEndExtent="0.75"
                     TickStrokeThickness="1"
                     MinorTickBrush="rgba(73, 73, 73, 1)"
                     MinorTickCount="4"
                     MinorTickStartExtent="0.725"
                     MinorTickEndExtent="0.75"
                     MinorTickStrokeThickness="1">
        </RadialGauge>
    </div>
</div>

@code {

    protected override void OnInitialized()
    {
        // Console.WriteLine("Sample runtime: " + IgniteUIBlazor.JsRuntime);
        Console.WriteLine("Sample OnInitialized...");
        RadialGaugeModule.Register(IgniteUIBlazor);
    }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Sample OnInitializedAsync...");

        await Task.Delay(10);
    }
}