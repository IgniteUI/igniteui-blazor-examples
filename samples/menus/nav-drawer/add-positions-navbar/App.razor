
@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">
    <div id="root" style="display: flex;">
        <IgbNavDrawer id="navDrawer" style="position: relative">
            <IgbNavDrawerHeaderItem>
                Sample Drawer
            </IgbNavDrawerHeaderItem>

            <IgbNavDrawerItem>
                <IgbIcon slot="icon" IconName="home"></IgbIcon>
                <span slot="content">Home</span>
            </IgbNavDrawerItem>

            <IgbNavDrawerItem>
                <IgbIcon slot="icon" IconName="search"></IgbIcon>
                <span slot="content">Search</span>
            </IgbNavDrawerItem>
        </IgbNavDrawer>

        <div id="content" style="width: 100%">
            <IgbRadioGroup id="radio-group" Alignment="RadioGroupAlignment.Horizontal">
                <IgbRadio Value="start" LabelPosition="RadioLabelPosition.After" Checked="true">Start</IgbRadio>
                <IgbRadio Value="end" LabelPosition="RadioLabelPosition.After">End</IgbRadio>
                <IgbRadio Value="top" LabelPosition="RadioLabelPosition.After">Top</IgbRadio>
                <IgbRadio Value="bottom" LabelPosition="RadioLabelPosition.After">Bottom</IgbRadio>
            </IgbRadioGroup>

            <IgbNavbar>
                <IgbIcon slot="start" name="menu" id="menu"></IgbIcon>
                <h2>Home</h2>
            </IgbNavbar>
        </div>
    </div></div>

