@using IgniteUI.Blazor.Controls


<div class="container vertical">
        <div class="options vertical">
        <div class="options horizontal">
            <label class="options-label">Minimum Date: @MinDate"</label>
        </div>
        <div class="options horizontal">
            <label class="options-label">Maximum Date: @MaxDate"</label>
        </div>
        </div>
        <div class="container vertical">
            <IgbXDatePicker @ref="DatePicker" Height="60px" Width="220px"
                        Value="@SelectedDate"
                        MinDate="@MinDate"
                        MaxDate="@MaxDate"
                        AllowTextInput="false" />
        </div>
    </div>

@code {
    public DateTime SelectedDate { get; set; }
    public DateTime MinDate { get; set; }
    public DateTime MaxDate { get; set; }
    public IgbXDatePicker DatePicker { get; set; }

    protected override void OnInitialized()
    {
        this.SelectedDate = DateTime.Today;
        var current = DateTime.Today;
        this.MinDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
        this.MaxDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, DateTime.DaysInMonth(DateTime.Today.Year, DateTime.Today.Month));
    }
}