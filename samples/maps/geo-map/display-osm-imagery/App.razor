@using IgniteUI.Blazor.Controls
@inject IIgniteUIBlazor IgniteUIBlazor

<div class="container vertical">

    <div class="container vertical">
        <IgbGeographicMap Height="100%" Width="100%" Zoomable="true"
                       BackgroundContent="@OSMImagery"
                       WindowRect="@GeoBounds">
        </IgbGeographicMap>
    </div>
</div>

@code {

    private IgbOpenStreetMapImagery OSMImagery;
    private Rect GeoBounds;

    protected override void OnInitialized()
    {
        IgbGeographicMapModule.Register(IgniteUIBlazor);
        IgbDataChartInteractivityModule.Register(IgniteUIBlazor);

        this.OSMImagery = new IgbOpenStreetMapImagery();
        this.GeoBounds = new Rect() { Left = - 150, Top = -60, Width = 315, Height = 140 };
    }
}