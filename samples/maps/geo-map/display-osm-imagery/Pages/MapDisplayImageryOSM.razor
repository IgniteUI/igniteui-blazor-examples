@page "/MapDisplayImageryOSM"

@using Infragistics.Blazor.Controls
@inject IInfragisticsBlazor InfragisticsBlazor;
@inject IJSRuntime JSRuntime;

<div class="igContainer">
    <div class="igOptions">
        @* TODO add options (if any) for IG control here otherwise remove DIV with igOptions *@
    </div>

    <div class="igComponent">
        <GeographicMap Height="100%" Width="100%" Zoomable="true"
                       BackgroundContent="@OSMImagery"
                       WindowRect="@GeoBounds">                       
        </GeographicMap>
    </div>
</div>

@code {

    private OpenStreetMapImagery OSMImagery;
    private Rect GeoBounds;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        GeographicMapModule.Register(InfragisticsBlazor);

        this.OSMImagery = new OpenStreetMapImagery();
        this.GeoBounds = new Rect() { Left = -150, Top = -60, Width = 315, Height = 140 };
    }
}
