@using IgniteUI.Blazor.Controls

@inject IJSRuntime JS

<div class="container vertical">

    <div class="container vertical fill">
        <IgbTreeGrid
        AutoGenerate="false"
        Id="grid"
        Data="NwindData"
        PrimaryKey="ProductID"
        RowEditable="true"
        CellEditEnterScript="WebGridCellEditEnter"
        CellEditExitScript="WebGridCellEditExit"
        CellEditScript="WebGridCellEdit"
        CellEditDone="OnCellEditDone"
        RowEditEnterScript="WebGridRowEditEnter"
        RowEditScript="WebGridRowEdit"
        RowEditDoneScript="WebGridRowEditDone"
        RowEditExitScript="WebGridRowEditExit"
        RenderedScript="WebTreeGridRendered"
        Name="grid"
        @ref="grid">
            <IgbColumn
            Field="ProductName"
            Header="Product Name">
            </IgbColumn>
            
            <IgbColumn
            Field="UnitPrice"
            Header="Unit Price">
            </IgbColumn>
            
            <IgbColumn
            Field="UnitsInStock"
            Header="Units In Stock">
            </IgbColumn>
            
            <IgbColumn
            Field="Ordered">
            </IgbColumn>
            
        </IgbTreeGrid>
        
    </div>
</div>

