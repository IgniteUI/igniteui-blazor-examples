@using IgniteUI.Blazor.Controls

@inject IJSRuntime JS

<div class="container vertical ig-typography">
    <div class="container vertical fill">
        <IgbGrid
        AutoGenerate="false"
        Id="grid"
        Name="grid"
        @ref="grid"
        Data="CustomersData"
        Moving="true"
        AllowFiltering="true">
            <IgbGridToolbar
            >
                <IgbGridToolbarActions
                >
                    <IgbGridToolbarHiding
                    >
                    </IgbGridToolbarHiding>

                    <IgbGridToolbarPinning
                    >
                    </IgbGridToolbarPinning>

                    <IgbGridToolbarExporter
                    ExportCSV="false"
                    ExportExcel="true"
                    ExportStartedScript="WebGridExportEventMultiColumnHeaders"
                    Name="gridToolbarExporter1"
                    @ref="gridToolbarExporter1">
                    </IgbGridToolbarExporter>

                </IgbGridToolbarActions>

            </IgbGridToolbar>

            <IgbColumn
            Name="ID"
            @ref="iD"
            Field="ID"
            Header="ID"
            Resizable="true"
            Filterable="false">
            </IgbColumn>

            <IgbColumnGroup
            Name="GeneralInformation"
            @ref="generalInformation"
            Header="General Information"
            Collapsible="true">
                <IgbColumn
                Name="Company"
                @ref="company"
                Field="Company"
                VisibleWhenCollapsed="true">
                </IgbColumn>

                <IgbColumnGroup
                Name="PersonalDetails"
                @ref="personalDetails"
                Header="Personal Details"
                Collapsible="true"
                VisibleWhenCollapsed="false">
                    <IgbColumn
                    Name="ContactName"
                    @ref="contactName"
                    Field="ContactName">
                    </IgbColumn>

                    <IgbColumn
                    Name="ContactTitle"
                    @ref="contactTitle"
                    Field="ContactTitle">
                    </IgbColumn>

                </IgbColumnGroup>

            </IgbColumnGroup>

            <IgbColumnGroup
            Name="AddressInformation"
            @ref="addressInformation"
            Header="Address Information">
                <IgbColumnGroup
                Name="Location"
                @ref="location"
                Header="Location"
                Collapsible="true"
                VisibleWhenCollapsed="true">
                    <IgbColumn
                    Name="Country"
                    @ref="country"
                    Field="Country"
                    VisibleWhenCollapsed="true"
                    Hidden="true">
                    </IgbColumn>

                    <IgbColumn
                    Name="Region"
                    @ref="region"
                    Field="Region"
                    VisibleWhenCollapsed="false"
                    Hidden="true">
                    </IgbColumn>

                    <IgbColumn
                    Name="City"
                    @ref="city"
                    Field="City"
                    VisibleWhenCollapsed="false"
                    Hidden="true">
                    </IgbColumn>

                    <IgbColumn
                    Name="Address"
                    @ref="address"
                    Field="Address"
                    VisibleWhenCollapsed="false"
                    Hidden="true">
                    </IgbColumn>

                </IgbColumnGroup>

                <IgbColumnGroup
                Name="ContactInformation"
                @ref="contactInformation"
                Header="Contact Information">
                    <IgbColumn
                    Name="Phone"
                    @ref="phone"
                    Field="Phone">
                    </IgbColumn>

                    <IgbColumn
                    Name="Fax"
                    @ref="fax"
                    Field="Fax">
                    </IgbColumn>

                    <IgbColumn
                    Name="PostalCode"
                    @ref="postalCode"
                    Field="PostalCode">
                    </IgbColumn>

                </IgbColumnGroup>

            </IgbColumnGroup>

        </IgbGrid>

    </div>
</div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var grid = this.grid;
        var gridToolbarExporter1 = this.gridToolbarExporter1;
        var iD = this.iD;
        var generalInformation = this.generalInformation;
        var company = this.company;
        var personalDetails = this.personalDetails;
        var contactName = this.contactName;
        var contactTitle = this.contactTitle;
        var addressInformation = this.addressInformation;
        var location = this.location;
        var country = this.country;
        var region = this.region;
        var city = this.city;
        var address = this.address;
        var contactInformation = this.contactInformation;
        var phone = this.phone;
        var fax = this.fax;
        var postalCode = this.postalCode;

    }

    private IgbGrid grid;
    private IgbGridToolbarExporter gridToolbarExporter1;
    private IgbColumn iD;
    private IgbColumnGroup generalInformation;
    private IgbColumn company;
    private IgbColumnGroup personalDetails;
    private IgbColumn contactName;
    private IgbColumn contactTitle;
    private IgbColumnGroup addressInformation;
    private IgbColumnGroup location;
    private IgbColumn country;
    private IgbColumn region;
    private IgbColumn city;
    private IgbColumn address;
    private IgbColumnGroup contactInformation;
    private IgbColumn phone;
    private IgbColumn fax;
    private IgbColumn postalCode;

    private CustomersData _customersData = null;
    public CustomersData CustomersData
    {
        get
        {
            if (_customersData == null)
            {
                _customersData = new CustomersData();
            }
            return _customersData;
        }
    }

}